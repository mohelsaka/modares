- model_class = @subject.class
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @subject.name
  %dt
    %strong
      = model_class.human_attribute_name(:description)
      \:
  %dd= @subject.description
  %dt
    %strong
      = model_class.human_attribute_name(:semester_id)
      \:
  %dd= @subject.semester_id
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")),          |
    subjects_path(:semester => @subject.semester_id), :class => 'btn' |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_subject_path(@subject), :class => 'btn'             |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                  |
    subject_path(@subject),                                                                         |
    :method => 'delete',                                                                            |
    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), |
    :class => 'btn btn-danger'                                                                      |
