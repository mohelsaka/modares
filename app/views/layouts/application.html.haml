!!!
%html
  %head
    %title= t("layout.project_name")
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} 
            Modares
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => root_url} 
                  = t('home')
              %li
                %a{:href => "#about"} About
              %li
                %a{:href => "#contact"} Contact
            %ul.nav.pull-right
              -unless user_signed_in?
                %li
                  %a{:href => "/users/sign_up"} Sign up
                %li.divider-vertical
                %li.dropdown{:id => 'login-popup'}
                  %a.dropdown-toggle{:href => "#" , "data-toggle"=>"dropdown"}
                    %span Sign in         
                    %strong.caret
                  %div.dropdown-menu{"style"=>"padding: 15px; padding-bottom: 0px;"}
                    #signin-required.hide.alert.alert-error
                      = t('.signin-required')
                    = render 'users/sessions/new'
              -else
                %li 
                  %ul.nav
                    %li.dropdown
                      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                        .login-div
                          .icon-user
                            = current_user.name
                          .label.label-info
                            = current_user.reputation_value_for :points
                          %b.caret
                      %ul.dropdown-menu
                        %li
                          =link_to(t('.your_profile'), profiles_url(current_user.id))
                        %li
                          =link_to(t('.log_out'), destroy_user_session_path, :method => :delete)   
          / /.nav-collapse
    .container
      = yield
    #error-msg.hidden
      %a.close-error{:onClick => "$(this).parent().addClass('hidden');"}
        Ã—
      .content
    %footer
      %hr/
      %p
        \&copy; Company 2012
