.user-info-head
  -if user_signed_in? && params[:id].to_i == current_user.id
    .btn-group.pull-right.edit-profile-group
      = link_to t('.edit'), edit_user_registration_path, {:class =>"btn"}
    
      
  %h3
    = @user.name
%hr
%div.row
  %center
    .avatar
      = image_tag @user.image
      %div 
        -if user_signed_in? && current_user.id == @user.id
          %span.label.label-success
            = @user.score
          %span.label.label-success#score
            = @user.score_private ? t(".private") : t(".public")
          %br  
          = link_to @user.score_private ? "Make your score public"  : "Make your score private" , private_score_url, :id => "private-link", :remote => true
        -else
          -unless @user.score_private
            %span.label.label-success#score
              = @user.score     
            
  .divider-vertical    
  .profile-info.span3
    %div
      %h3
        =t('user_info')
    %div
      %div
        %div
          = t('user_name')+" : "+@user.name
        %div
          = t('age') +" : "+ @user.age.to_s
        %div 
          = t("member_since")  +" : " + time_ago_in_words(@user.created_at)
  .about-me.span5
    = @user.about_me
%hr
.tabbable.profile-video-list
  / Only required for left/right tabs
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#tab1"} 
        =t('.user_videos')
    %li
      %a{"data-toggle" => "tab", :href => "#tab2"} 
        =t('.user_questions')
    %li
      %a{"data-toggle" => "tab", :href => "#tab3"} 
        =t('.user_answers')
    %li
      %a{"data-toggle" => "tab", :href => "#tab4"} 
        =t('.user_reputation_history')        
  .tab-content
    #tab1.tab-pane.active
      #videos
        = render :partial => 'videos/video_thumb', :collection => @user.videos   
    #tab2.tab-pane
      = render :partial => 'profiles/question_in_tabs', :collection => @user.questions
    #tab3.tab-pane
      .answers
        = render :partial => 'profiles/answer_in_tabs', :collection => @user.answers
    #tab4.tab-pane
      = render :partial => 'profiles/reputation', :collection => @reputations    
