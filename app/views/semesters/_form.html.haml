= form_for @semester, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :position, :class => 'control-label'    
    .controls
      = f.text_field :position, :class => 'text_field'  
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
      
  .control-group.hidden
    = f.label :level_id, :class => 'control-label hidden'
    .controls
      = f.number_field :level_id, :class => 'number_field hidden'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      semesters_path, :class => 'btn'                              |
