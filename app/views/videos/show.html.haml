.row.fluid
  .span9
    %p#notice= notice
    %p
      %h3.pull-left
        = @video.title
      %h2.pull-right 
        = [@video.subject.name, @video.subject.semester.name, @video.subject.semester.level.name].join(' < ')
    %br
    %hr
    %video{:controls => "controls", :height => "400", :width => "870"}
      %source{:src => @video.url , :type => "video/ogg"}/  
    #video-actions
      .btn-group
        = link_to "Up", vote_url(:id => @video.id, :type => 'like', :target => 'v'), :remote => true, :class => "btn icon-thumbs-up"
        .label.label-info{:id => "v#{@video.id}-votes"}
          = @video.upvotes.size - @video.downvotes.size
        = link_to "Down", vote_url(:id => @video.id, :type => 'bad', :target => 'v'), :remote => true, :class => "btn icon-thumbs-down"
      #views-count.label.label-success.pull-right
        %b.icon-eye-open  
          = @video.views
      .btn-group.pull-right
        %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          = t('.share')
          %span.caret
        %ul.dropdown-menu
          %li
            %a{:href=>"#"}
              Facebook
            %a{:href=>"#"}
              Twitter
            %a{:href=>"#"}
              Google        
    #video-info
      %p
        = t('.made_by')
        = link_to @video.user.name, profiles_url(:id => @video.user_id)
        = [t('.published_at'), @video.created_at.to_date].join(' ')
      
      %p
        = @video.description
      
      - if current_user && current_user.id == @video.user_id
        = link_to 'Edit', edit_video_path(@video)
      %hr
      .span9
        .asking-area
          = image_tag 'question_icon.jpg', :class => 'icon'
          = form_for @question, :url => add_question_url(:id => @video.id), :remote => true do |f|
            = f.text_area :body, {:rows => 3, :class => "question-body", "placeholder" => t('.question-placeholder')}
            = f.submit t('.post'), :class => 'btn btn-large post-btn'
      .span9
        #questions-area
          = render :partial => 'videos/question', :collection => @video.questions
          
    %hr
  .span3.pull-left
    Side Bar