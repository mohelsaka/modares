.question{:id => "q-#{question.id}"}
  %div
    = image_tag 'question_icon.jpg', :class => 'icon'
    %div.question-body{'data-toggle' => "collapse", 'data-target' => "#ans-#{question.id}"}
      = question.body
    .vote-actions
      = link_to "", vote_url(:id => question.id, :type => 'like', :target => 'q'), :remote => true, :class => "btn icon-thumbs-up"
      .label.label-info{:id => "q#{question.id}-votes"} 
        = question.upvotes.size - question.downvotes.size
      = link_to "", vote_url(:id => question.id, :type => 'bad', :target => 'q'), :remote => true, :class => "btn icon-thumbs-down"
  .answers.collapse{:id => "ans-#{question.id}"}
    .answers-div
      = render :partial => 'videos/answer', :collection => question.answers
    .asnwer-form-div
      = image_tag 'answer_icon.png', :class => 'icon'
      = form_for @answer, :url => add_answer_url(:id => question.id), :remote => true do |f|
        = f.text_area :body, {:rows => 3, :class => "answer-body", "placeholder" => t('.question-placeholder')}
        = f.submit t('.post'), :class => 'btn btn-large post-btn'
  %hr