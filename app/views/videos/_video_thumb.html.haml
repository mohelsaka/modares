.row.video-row
  .span2
    = image_tag video_thumb.icon.url(:medium), :height => 110, :width => 170
  .span6
    %h5.thumb-title
      = truncate(video_thumb.title, :length => 100)
      .duration
        = video_thumb.created_at.to_date
    %p
      = truncate(video_thumb.description, :length => 150)
    .reviews
      .icon-user
      = video_thumb.user.first_name + " " + video_thumb.user.last_name
      .icon-eye-open.offset1
      = video_thumb.views
      .icon-time.offset1
      = Time.at(video_thumb.duration).utc.strftime("%H:%M:%S")
      
