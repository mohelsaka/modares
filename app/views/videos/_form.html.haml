=upload_video_url
= form_for(@video) do |f|
  - if @video.errors.any?
    #error_explanation
      %h2
        = pluralize(@video.errors.count, "error")
        prohibited this video from being saved:
      %ul
        - @video.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :url
    %br/
    = f.text_field :url, :value => @id
  .field
    = f.label :views
    %br/
    = f.number_field :views
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :subject_id
    %br/
    = select("video", "subject_id", Subject.all.collect {|p| [ p.name, p.id ] }, {:include_blank => 'None'})
    
  .field
    = f.file_field :icon
    %br/  
  .actions
    = f.submit
